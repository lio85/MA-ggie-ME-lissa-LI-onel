<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head') %>
  
<body>

    <%- include('../partials/header') %>

    <main id="login-main">
        <div class="prodFormContainer">
            <div id="div-icono">
                <i id="icono" class="fas fa-leaf"></i> 
            </div>
            <label id="bienvenida" class="labels-formulario">Nuevo producto</label>
            <form class="productForm" action="#" method="POST"> 
                <div  class="ProductFormFirstLine">
                    <div class="prodFormName">
                        <label class="prodFormLabel" for="">Nombre</label>
                        <input class="prodFormInput" type="text">
                    </div>
                    <div class="prodFormCategory">
                        <label class="prodFormLabel" for="">Categoría</label>
                        <select name="" id="">
                            <option value="" selected>Pots</option>
                            <option value="">Big Pots</option>
                            <option value="">Plant Stands</option>
                            <option value="">Plantas</option>
                            <option value="">Terrarios</option>
                        </select>
                    </div>
                </div>
                
                <div class="ProductFormSecondLine">
                    <div class="prodFormPrice">
                        <label class="prodFormLabel" for="">Precio</label>
                        <input class="prodFormInput" type="text">
                    </div>
                </div>

                <div class="productFormThirdLine">
                    <div class="productFormThirdLineEl">
                        <label class="prodFormLabel" for="">Efectivo</label>
                        <input class="prodFormInput" type="radio" name="PayWay" checked>
                        <label class="prodFormLabel" for="">Tarjeta</label>
                        <input class="prodFormInput" type="radio" name="PayWay">
                    </div>
                    <div class="productFormThirdLineEl"> 
                        <label class="prodFormLabel" for="">Cuotas</label>
                        <select name="" id="">
                            <option value="" selected>3</option>
                            <option value="">6</option>
                            <option value="">9</option>
                            <option value="">12</option>
                        </select>
                    </div>
                    <div class="productFormThirdLineEl">
                        <label class="prodFormLabelInterest" for="">Interés(%)</label>
                        <input class="prodFormInputInterest" type="number" min="0" max="100">
                    </div>
                </div>

                <input class="prodFormButton images" type="file" name="" id="" multiple>
                
                <div class="productFormFourthLine">
                    <button class="prodFormButton">Vista previa</button>
                    <button class="prodFormButton" type="submit">Confirmar</button>
                </div>
            </form> 
        </div>   
    </main>
   
    <%- include('../partials/footer') %>

</body>
</html>

